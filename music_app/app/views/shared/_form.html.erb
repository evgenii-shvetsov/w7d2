<section class ="sign_style">
    <% action = (task == "signup" ? users_url : session_url) %>
    <% message = (task == "signup" ? "Sign Up!" : "Log In!") %>

    <form action="<%= action %>" method="POST" id="form_style">
      
        <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>"
      >
      
      <label>Email
        <input  type="text" name="user[email]" id="user_username">
      </label>
      <br>

      <label>Password
      <input type="password" name="user[password]" id="user_password" >
      </label>
      <br>

      <input id="button_style" type="submit" value="<%= message %>">
    </form>

</section>